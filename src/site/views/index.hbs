<!DOCTYPE html>
<head>
	{{#if id}}
		<title>DiscordPaste - {{id}}</title>
	{{else}}
		<title>DiscordPaste</title>
	{{/if}}

	{{{headStuff}}}
</head>
<body>
	<div id="legend">
		<div id="header">Discord Paste</div>
		<div id="buttons">
			<button id="save" label="Save" shortcut="ctrl + s"><i class="fa fa-floppy-o"></i></button>
			<button id="new" label="New" shortcut="ctrl + n"><i class="fa fa-file-code-o"></i></button>
			<button id="duplicate" label="Duplicate &amp; Edit" shortcut="ctrl + shift + d"><i class="fa fa-files-o"></i></button>
			<button id="raw" label="Raw" shortcut="ctrl + shift + r"><i class="fa fa-file-text-o"></i></button>
			<button id="login" label="Sign in with Discord" shortcut="ctrl + shift + l"><i class="fa fa-sign-in"></i></button>
		</div>
		<div id="tooltips">
			<div id="label"></div>
			<div id="shortcut"></div>
		</div>
	</div>

	<textarea id="editor" spellcheck="false"></textarea>
</body>