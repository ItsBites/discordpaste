/// seq2_ret0 := e0 e1
pub fn seq2_ret0<T0: Copy Durable, T1: Copy Durable>(p0: Parser<T0>, p1: Parser<T1>) -> Parser<T0>
{
	seq2(p0, p1, |a0, _a1| result::Ok(a0))
}

